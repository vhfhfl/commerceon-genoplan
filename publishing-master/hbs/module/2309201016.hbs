  <div class='pc:max-w-[1100px] pc:mx-auto'>
    <article class='max-pc:space-y-[80px] pc:grid pc:grid-cols-2 pc:gap-[120px_6.94%]'>
      {{JSON 'array' '/assets/json/2309201019.json'}}
      {{#EACH array}}
        <div data-aos='fade-up' data-aos-duration='500'>
          <div class='text-[#279FB9] text-[18px] pc:text-[28px] font-[900]'>
            {{obj.title}}
          </div>
          <div class='mt-[14px] pc:mt-[24px] text-[#161616] text-[28px] pc:text-[46px] font-[600]'>
            {{obj.subtitle}}
          </div>
          {{#EACH obj.childs}}
          <div class='mt-[30px] pc:mt-[40px]'>
            {{#if obj.desc}}
              <div class='text-[#161616] text-[16px] pc:text-[20px] font-[600]'>{{obj.desc}}</div>
            {{/if}}
            <div class='mt-[14px] pc:mt-[16px]'>
              <div class='text-[#161616] text-[14px] pc:text-[18px] font-[400] leading-[20px] pc:leading-[30px] break-keep'>
                {{{obj.text}}}
              </div>
            </div>
          </div>
          {{/EACH}}
        </div>
      {{/EACH}}
    </article>
  </div>
